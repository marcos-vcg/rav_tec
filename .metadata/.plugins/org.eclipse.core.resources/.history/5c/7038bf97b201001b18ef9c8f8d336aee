import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.util.ArrayList;

import javax.swing.JButton;
import javax.swing.JInternalFrame;
import javax.swing.JLabel;
import javax.swing.JOptionPane;
import javax.swing.JTextField;

public class Filme extends JInternalFrame {
	static final int xPosition = 30, yPosition = 30;

	public Filme(ArrayList<String> cadFilme) {
		super("Cadastro de Filmes", true, // resizable
				true, // closable
				true, // maximizable
				true);// iconifiable
		setSize(300, 300);
		setLocation(xPosition, yPosition);
		setLayout(null);
		
		JLabel label = new JLabel("Título:");
		label.setBounds(20, 20, 100, 20);
		add(label);
		JTextField texto = new JTextField(10);
		texto.setBounds(40, 20, 100, 20);
		add(texto);
		
		
		JLabel label2 = new JLabel("Preço:");
		label2.setBounds(60, 60, 100, 20);
		add(label2);
		JTextField texto2 = new JTextField(10);
		texto2.setBounds(80, 60, 100, 20);
		add(texto2);
		
		
		JButton botao = new JButton("Cadastrar");
		add(botao);
		
		botao.addActionListener(new ActionListener() {
			public void actionPerformed(ActionEvent e) {
								
				if(texto.getText().contentEquals("") || texto2.getText().contentEquals("") ) {
					JOptionPane.showMessageDialog(null, "Campos Obrigatórios Vazios!", "Cadastro Inválido!", JOptionPane.WARNING_MESSAGE);
				} else {
					cadFilme.add(texto.getText());
					cadFilme.add(texto2.getText());
					JOptionPane.showMessageDialog(null, "Cadastro efetuado com sucesso!", "Cadastro Efetuado!", JOptionPane.WARNING_MESSAGE);
				}
			}
		});
	}
}


